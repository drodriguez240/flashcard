{
  "name": "lazycard",
  "version": "1.1.0",
  "description": "A simple flashcard application where cards are formatted with Markdown.",
  "main": "./build/main.js",
  "scripts": {
    "dev": "webpack --mode development",
    "prod": "webpack --mode production",
    "start": "npm run dev && electron .",
    "pack": "npm run prod && electron-builder --dir",
    "dist": "npm run prod && electron-builder -p never",
    "test-with-xml-reporter": "mocha --require ts-node/register --reporter mocha-junit-reporter test/**/*.test.ts"
  },
  "keywords": [
    "flashcard",
    "spaced repetition",
    "markdown",
    "math",
    "katex",
    "electron"
  ],
  "author": "hikikones",
  "license": "MIT",
  "build": {
    "appId": "com.electron.lazycard",
    "productName": "Lazycard",
    "icon": "icon.png",
    "files": [
      "./build/**/*"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/markdown-it": "10.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.6.0",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "mocha": "^8.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@iktakahiro/markdown-it-katex": "^3.1.0",
    "fuse.js": "^6.3.1",
    "katex": "^0.11.1",
    "lato-font": "^3.0.0",
    "markdown-it": "^11.0.0",
    "markdown-it-prism": "^2.0.5",
    "material-icons": "^0.3.1",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "typeface-roboto-mono": "0.0.75"
  }
}
